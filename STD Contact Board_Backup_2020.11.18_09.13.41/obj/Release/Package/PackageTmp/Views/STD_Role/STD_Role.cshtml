<h2>STD_Role</h2>

@(Html.Kendo().Grid<STD_Role>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Name);       
        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(250);
    })
    .ToolBar(toolbar => toolbar.Create())
    .Editable(editable => editable.Mode(GridEditMode.InLine).ConfirmDelete("Delete").DisplayDeleteConfirmation("Are you sure you want to delete this?"))
    .Pageable()
    .Sortable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("error_handler"))
        .Model(model => model.Id(p => p.Id))
        .Create(update => update.Action("EditingInline_Create", "STD_Role"))
        .Read(read => read.Action("Read", "STD_Role"))
        .Update(update => update.Action("EditingInline_Update", "STD_Role"))
        .Destroy(update => update.Action("EditingInline_Destroy", "STD_Role"))
    )
)
<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>
